---
// Chat Component - Interface pour le jumeau num√©rique de Jules
export interface Props {
  lang?: 'fr' | 'en';
}

const { lang = 'en' } = Astro.props;

// Contenu selon la langue
const content = {
  fr: {
    subtitle: "Jumeau num√©rique",
    placeholder: "Posez votre question...",
    sendButton: "Envoyer",
    enterHint: "Appuyez sur Entr√©e pour envoyer",
    typingIndicator: "Jules √©crit...",
    welcomeMessage: "Salut ! Je suis le jumeau num√©rique de Jules. Posez-moi des questions sur ses comp√©tences, projets ou exp√©riences ! üòä",
    chatLabel: "Chat avec Jules"
  },
  en: {
    subtitle: "Digital Twin",
    placeholder: "Ask your question...",
    sendButton: "Send",
    enterHint: "Press Enter to send",
    typingIndicator: "Jules is typing...",
    welcomeMessage: "Hi! I'm Jules' digital twin. Ask me questions about his skills, projects, or experiences! üòä",
    chatLabel: "Chat with Jules"
  }
};

const t = content[lang];
---

<div id="chat-container" class="fixed bottom-6 right-6 z-50">
  <!-- Chat Button -->
  <button 
    id="chat-toggle"
    class="bg-[var(--sec)] hover:bg-[var(--sec)]/80 text-white rounded-full w-14 h-14 flex items-center justify-center shadow-lg transition-all duration-300 hover:scale-110 p-2 border-2 border-white/20"
    aria-label={t.chatLabel}
  >
    <div 
      class="w-12 h-12 rounded-full overflow-hidden avatar-optimized"
      style="background-image: url('/images/JulesAvatar-square.png');"
    ></div>
  </button>

  <!-- Chat Modal -->
  <div 
    id="chat-modal" 
    class="absolute bottom-16 right-0 w-80 h-96 bg-[var(--background)] border border-[var(--white-icon-tr)] rounded-lg shadow-2xl hidden flex-col overflow-hidden"
  >
    <!-- Header -->
    <div class="flex items-center justify-between p-4 border-b border-[var(--white-icon-tr)] bg-gradient-to-r from-[var(--sec)]/10 to-transparent">
      <div class="flex items-center gap-3">
        <div 
          class="w-9 h-9 rounded-full overflow-hidden avatar-optimized"
          style="background-image: url('/images/JulesAvatar-square.png');"
        ></div>
        <div>
          <h3 class="text-[var(--white)] font-medium">Jules</h3>
          <p class="text-[var(--white-icon)] text-xs">{t.subtitle}</p>
        </div>
      </div>
      <div class="flex items-center gap-2">
        <button id="chat-minimize" class="text-[var(--white-icon)] hover:text-[var(--sec)] transition-colors" title="R√©duire">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
          </svg>
        </button>
        <button id="chat-close" class="text-[var(--white-icon)] hover:text-red-400 transition-colors" title="Fermer">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Messages Container -->
    <div id="messages-container" class="flex-1 p-4 overflow-y-auto space-y-3 bg-[var(--background)]">
      <!-- Les messages seront ajout√©s dynamiquement par JavaScript -->
    </div>

    <!-- Input Area -->
    <div class="p-4 border-t border-[var(--white-icon-tr)] bg-[var(--background)]">
      <div class="flex gap-2">
        <input 
          id="chat-input"
          type="text" 
          placeholder={t.placeholder}
          class="flex-1 bg-[var(--white-icon-tr)] text-[var(--white)] px-3 py-2 rounded-lg text-sm border border-transparent focus:border-[var(--sec)] focus:outline-none"
          maxlength="200"
        />
        <button 
          id="chat-send"
          class="bg-[var(--sec)] hover:bg-[var(--sec)]/80 text-white px-3 py-2 rounded-lg transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
          disabled
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
          </svg>
        </button>
      </div>
      <div class="flex justify-between items-center mt-2">
        <p class="text-[var(--white-icon)] text-xs">{t.enterHint}</p>
        <div id="typing-indicator" class="text-[var(--sec)] text-xs hidden">{t.typingIndicator}</div>
      </div>
    </div>
  </div>


</div>

<script>
  interface ChatMessage {
    role: 'user' | 'assistant';
    content: string;
    timestamp?: string;
  }

  class ChatWidget {
    private chatToggle!: HTMLElement;
    private chatModal!: HTMLElement;
    private chatClose!: HTMLElement;
    private chatMinimize!: HTMLElement;
    private messagesContainer!: HTMLElement;
    private chatInput!: HTMLInputElement;
    private chatSend!: HTMLElement;
    private typingIndicator!: HTMLElement;
    private messages: ChatMessage[] = [];
    private isOpen = false;
    private lang: string;

    constructor() {
      // TEMPORAIRE : Forcer le reset pour les tests
      localStorage.removeItem('chatState');
      sessionStorage.removeItem('chatState');
      
      // D√©tecter la langue depuis l'URL ou le HTML
      this.lang = window.location.pathname.includes('/fr') ? 'fr' : 'en';
      this.initElements();
      this.bindEvents();
      this.restoreState();
      this.protectNavigation();
    }

    private initElements() {
      this.chatToggle = document.getElementById('chat-toggle')!;
      this.chatModal = document.getElementById('chat-modal')!;
      this.chatClose = document.getElementById('chat-close')!;
      this.chatMinimize = document.getElementById('chat-minimize')!;
      this.messagesContainer = document.getElementById('messages-container')!;
      this.chatInput = document.getElementById('chat-input') as HTMLInputElement;
      this.chatSend = document.getElementById('chat-send')!;
      this.typingIndicator = document.getElementById('typing-indicator')!;
    }

    private bindEvents() {
      this.chatToggle.addEventListener('click', () => this.toggleChat());
      this.chatClose.addEventListener('click', () => this.closeChat());
      this.chatMinimize.addEventListener('click', () => this.closeChat());
      this.chatSend.addEventListener('click', () => this.sendMessage());
      
      this.chatInput.addEventListener('input', () => {
        this.chatSend.classList.toggle('disabled:opacity-50', !this.chatInput.value.trim());
        (this.chatSend as HTMLButtonElement).disabled = !this.chatInput.value.trim();
      });

      this.chatInput.addEventListener('keypress', (e) => {
        if (e.key === 'Enter' && this.chatInput.value.trim()) {
          this.sendMessage();
        }
      });

      // Fermer en cliquant √† l'ext√©rieur (mais pas sur les liens de navigation)
      document.addEventListener('click', (e) => {
        const target = e.target as Node;
        const isNavLink = target && (target as HTMLElement).closest('nav, a[href]');
        
        if (this.isOpen && 
            !this.chatModal.contains(target) && 
            !this.chatToggle.contains(target) && 
            !isNavLink) {
          this.closeChat();
        }
      });
    }

    private toggleChat() {
      if (this.isOpen) {
        this.closeChat();
      } else {
        this.openChat();
      }
    }

    public openChat() {
      this.isOpen = true;
      this.chatModal.classList.remove('hidden');
      this.chatModal.classList.add('flex');
      this.chatInput.focus();
      this.scrollToBottom();
      this.saveState();
    }

    private closeChat() {
      this.isOpen = false;
      this.chatModal.classList.add('hidden');
      this.chatModal.classList.remove('flex');
      this.saveState();
    }



    private saveState() {
      const state = {
        isOpen: this.isOpen,
        messages: this.messages
      };
      localStorage.setItem('chatState', JSON.stringify(state));
      console.log('üíæ Chat state saved:', { isOpen: this.isOpen });
    }

    private restoreState() {
      try {
        const savedState = localStorage.getItem('chatState');
        if (savedState) {
          const state = JSON.parse(savedState);
          this.messages = state.messages || [];
          console.log('üîÑ Chat state restored:', { isOpen: state.isOpen });
          
          // Restaurer les messages dans l'interface
          this.messagesContainer.innerHTML = '';
          
          // Restaurer tous les messages sauvegard√©s
          this.messages.forEach(msg => {
            this.displayMessage(msg.role, msg.content);
          });

          // Restaurer l'√©tat d'ouverture
          if (state.isOpen) {
            setTimeout(() => this.openChat(), 100);
          }
        } else {
          // Pas d'√©tat sauvegard√© = premi√®re visite, ajouter le message d'accueil
          this.addWelcomeMessage();
        }
      } catch (error) {
        console.error('Erreur lors de la restauration du chat:', error);
        // En cas d'erreur, ajouter le message d'accueil par d√©faut
        this.addWelcomeMessage();
      }
    }

    private addWelcomeMessage() {
      const welcomeMsg = this.lang === 'fr'
        ? "Salut ! Je suis le jumeau num√©rique de Jules. Posez-moi des questions sur ses comp√©tences, projets ou exp√©riences ! üòä"
        : "Hi! I'm Jules' digital twin. Ask me questions about his skills, projects, or experiences! üòä";
      
      // Ajouter le message √† l'historique
      const message: ChatMessage = { role: 'assistant', content: welcomeMsg, timestamp: new Date().toISOString() };
      this.messages.push(message);
      
      // Afficher le message
      this.displayMessage('assistant', welcomeMsg);
      this.saveState();
    }

    private async sendMessage() {
      const message = this.chatInput.value.trim();
      if (!message) return;

      // Ajouter le message utilisateur
      this.addMessage('user', message);
      this.chatInput.value = '';
      (this.chatSend as HTMLButtonElement).disabled = true;
      this.chatSend.classList.add('disabled:opacity-50');

      // Afficher l'indicateur de frappe
      this.showTyping();

      try {
        // Appel √† l'API - URL absolue pour compatibilit√© Netlify
        const apiUrl = window.location.origin + '/api/chat';
        console.log('üåê API URL:', apiUrl);
        
        const response = await fetch(apiUrl, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            message,
            history: this.messages
          })
        });

        console.log('üì° Response status:', response.status);
        console.log('üì° Response headers:', Object.fromEntries(response.headers.entries()));

        if (!response.ok) {
          const errorText = await response.text();
          console.error('‚ùå API Error Response:', errorText);
          throw new Error(`HTTP ${response.status}: ${errorText}`);
        }

        const data = await response.json();
        console.log('‚úÖ API Success Response:', data);
        
        if (data.success) {
          // Simuler un d√©lai de r√©ponse
          setTimeout(() => {
            this.hideTyping();
            this.addMessage('assistant', data.message);
          }, Math.random() * 1000 + 500);
        } else {
          throw new Error(data.error || 'Erreur inconnue');
        }

      } catch (error) {
        console.error('‚ùå Chat API Error:', error);
        console.error('‚ùå Error details:', {
          message: error instanceof Error ? error.message : String(error),
          stack: error instanceof Error ? error.stack : 'No stack trace'
        });
        this.hideTyping();
        const errorMsg = this.lang === 'fr' 
          ? 'D√©sol√©, je rencontre un probl√®me technique. Pouvez-vous r√©essayer ?' 
          : 'Sorry, I\'m experiencing a technical issue. Can you try again?';
        this.addMessage('assistant', errorMsg);
      }
    }

    private addMessage(role: 'user' | 'assistant', content: string) {
      const message: ChatMessage = { role, content, timestamp: new Date().toISOString() };
      this.messages.push(message);
      this.displayMessage(role, content);
      this.saveState();
    }

    private displayMessage(role: 'user' | 'assistant', content: string) {
      const messageDiv = document.createElement('div');
      messageDiv.className = 'flex gap-3';

      if (role === 'user') {
        messageDiv.innerHTML = `
          <div class="flex-1"></div>
          <div class="bg-[var(--sec)] text-white p-3 rounded-lg rounded-tr-none max-w-[80%]">
            <p class="text-sm">${this.escapeHtml(content)}</p>
          </div>
          <div class="w-6 h-6 bg-[var(--white-icon)] text-[var(--background)] rounded-full flex items-center justify-center flex-shrink-0">
            <span class="text-xs font-bold">U</span>
          </div>
        `;
      } else {
        messageDiv.innerHTML = `
          <div class="w-6 h-6 bg-[var(--sec)] rounded-full flex items-center justify-center flex-shrink-0">
            <span class="text-white text-xs font-bold">J</span>
          </div>
          <div class="bg-[var(--white-icon-tr)] text-[var(--white)] p-3 rounded-lg rounded-tl-none max-w-[80%]">
            <p class="text-sm">${this.escapeHtml(content)}</p>
          </div>
        `;
      }

      this.messagesContainer.appendChild(messageDiv);
      this.scrollToBottom();
    }

    private showTyping() {
      this.typingIndicator.classList.remove('hidden');
    }

    private hideTyping() {
      this.typingIndicator.classList.add('hidden');
    }

    private scrollToBottom() {
      setTimeout(() => {
        this.messagesContainer.scrollTop = this.messagesContainer.scrollHeight;
      }, 100);
    }

    private protectNavigation() {
      // Sauvegarder l'√©tat avant les navigations
      window.addEventListener('beforeunload', () => {
        this.saveState();
      });

      // Intercepter les clics sur les liens pour sauvegarder l'√©tat
      document.addEventListener('click', (e) => {
        const target = e.target as HTMLElement;
        const link = target.closest('a[href]');
        
        if (link && link.getAttribute('href')?.startsWith('/')) {
          // C'est une navigation interne, sauvegarder l'√©tat
          this.saveState();
        }
      });

      // √âcouter les changements de page (pour les SPAs)
      window.addEventListener('popstate', () => {
        // Petit d√©lai pour laisser le temps √† la page de se charger
        setTimeout(() => {
          this.restoreState();
        }, 100);
      });
    }

    private escapeHtml(text: string): string {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }
  }

  // Initialiser le chat quand le DOM est pr√™t
  document.addEventListener('DOMContentLoaded', () => {
    new ChatWidget();
  });
</script>

<style>
  /* Animation pour le bouton chat */
  #chat-toggle {
    animation: pulse 2s infinite;
  }

  /* Optimisation ultra des avatars - Anti-pixelisation */
  .avatar-optimized {
    background-size: cover !important;
    background-position: center center !important;
    background-repeat: no-repeat !important;
    image-rendering: -webkit-optimize-contrast;
    image-rendering: optimize-contrast;
    image-rendering: crisp-edges;
    transform: translateZ(0);
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
    will-change: transform;
    filter: contrast(1.05) brightness(1.02) saturate(1.1);
  }

  /* Version liss√©e pour √©viter la pixelisation */
  .avatar-smooth {
    background-size: cover !important;
    background-position: center center !important;
    background-repeat: no-repeat !important;
    image-rendering: auto;
    image-rendering: smooth;
    image-rendering: high-quality;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    filter: blur(0.3px) contrast(1.1) brightness(1.05);
    transform: translateZ(0);
  }

  @keyframes pulse {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(164, 118, 255, 0.4);
    }
    50% {
      box-shadow: 0 0 0 10px rgba(164, 118, 255, 0);
    }
  }

  /* Scrollbar personnalis√©e */
  #messages-container::-webkit-scrollbar {
    width: 4px;
  }

  #messages-container::-webkit-scrollbar-track {
    background: var(--white-icon-tr);
  }

  #messages-container::-webkit-scrollbar-thumb {
    background: var(--sec);
    border-radius: 2px;
  }

  /* Animation d'apparition */
  #chat-modal {
    animation: slideUp 0.3s ease-out;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>