      <!-- Formulaire de contact -->
      <div class="bg-gradient-to-br from-[var(--sec)]/5 to-transparent p-8 rounded-xl border border-[var(--white-icon-tr)]">
        <h3 class="text-2xl font-medium text-[var(--white)] mb-6">Envoyez-moi un message</h3>
        
        <form 
          class="space-y-6" 
          name="contact" 
          method="POST" 
          data-netlify="true"
          data-netlify-honeypot="bot-field"
          onsubmit="return handleFormSubmitFR(event)"
        >
          <input type="hidden" name="form-name" value="contact" />
          <input type="hidden" name="bot-field" style="display: none" />
          <input type="hidden" name="language" value="fr" />
          <div class="grid md:grid-cols-2 gap-4">
            <div>
              <label for="name" class="block text-sm font-medium text-[var(--white)] mb-2">
                Nom *
              </label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-3 bg-[var(--white-icon-tr)] border border-transparent rounded-lg text-[var(--white)] placeholder-[var(--white-icon)] focus:border-[var(--sec)] focus:outline-none transition-colors"
                placeholder="Votre nom"
              >
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-[var(--white)] mb-2">
                Email *
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 bg-[var(--white-icon-tr)] border border-transparent rounded-lg text-[var(--white)] placeholder-[var(--white-icon)] focus:border-[var(--sec)] focus:outline-none transition-colors"
                placeholder="votre@email.com"
              >
            </div>
          </div>
          
          <div>
            <label for="subject" class="block text-sm font-medium text-[var(--white)] mb-2">
              Sujet
            </label>
            <input 
              type="text" 
              id="subject" 
              name="subject"
              class="w-full px-4 py-3 bg-[var(--white-icon-tr)] border border-transparent rounded-lg text-[var(--white)] placeholder-[var(--white-icon)] focus:border-[var(--sec)] focus:outline-none transition-colors"
              placeholder="Sujet de votre message"
            >
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-[var(--white)] mb-2">
              Message *
            </label>
            <textarea 
              id="message" 
              name="message" 
              rows="6" 
              required
              class="w-full px-4 py-3 bg-[var(--white-icon-tr)] border border-transparent rounded-lg text-[var(--white)] placeholder-[var(--white-icon)] focus:border-[var(--sec)] focus:outline-none transition-colors resize-vertical"
              placeholder="Décrivez votre projet ou vos besoins..."
            ></textarea>
          </div>
          
          <button 
            type="submit"
            class="w-full bg-[var(--sec)] hover:bg-[var(--sec)]/80 text-white font-medium py-3 px-6 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-[var(--sec)] focus:ring-offset-2 focus:ring-offset-[var(--background)]"
          >
            Envoyer le message
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  // Fonction pour gérer la soumission du formulaire français avec redirection vers /succes
  function handleFormSubmitFR(event: Event): boolean {
    event.preventDefault();
    
    const form = event.target as HTMLFormElement;
    const formData = new FormData(form);
    
    // Convertir FormData en URLSearchParams
    const urlencoded = new URLSearchParams();
    formData.forEach((value, key) => {
      urlencoded.append(key, value.toString());
    });
    
    // Soumettre le formulaire à Netlify
    fetch('/', {
      method: 'POST',
      headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
      body: urlencoded.toString()
    })
    .then(response => {
      if (response.ok) {
        // Rediriger vers notre page de succès française
        window.location.href = '/succes';
      } else {
        throw new Error('Erreur de soumission');
      }
    })
    .catch(error => {
      console.error('Erreur:', error);
      alert('Une erreur est survenue. Veuillez réessayer.');
    });
    
    return false; // Empêcher la soumission normale du formulaire
  }
</script>